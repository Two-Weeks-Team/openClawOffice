{
  "name": "openclawoffice",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "test": "vitest run --exclude server/perf-local50.test.ts",
    "benchmark:local25": "LOCAL50_PROFILE=local25 LOCAL50_REPORT_NAME=local25 LOCAL50_REPORT_DIR=.reports/perf vitest run server/perf-local50.test.ts",
    "benchmark:local50": "LOCAL50_PROFILE=local50 LOCAL50_REPORT_NAME=local50 LOCAL50_REPORT_DIR=.reports/perf vitest run server/perf-local50.test.ts",
    "readiness:rehearsal": "pnpm benchmark:local25 && pnpm benchmark:local50 && pnpm e2e:workflow",
    "readiness:gate": "pnpm readiness:rehearsal && node scripts/readiness-gate.mjs",
    "e2e:workflow": "vitest run server/workflow-e2e.test.ts",
    "e2e:smoke": "node scripts/e2e-smoke.mjs",
    "ux:verify": "node scripts/ux-verify.mjs",
    "ci:local": "pnpm lint && pnpm test && pnpm benchmark:local50 && pnpm build && pnpm e2e:smoke && pnpm ux:verify",
    "preview": "vite preview"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "pnpm": {
    "overrides": {
      "minimatch": ">=10.2.1",
      "ajv": ">=6.14.0 <7.0.0"
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@testing-library/react": "^16.3.2",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^25.3.0",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "jsdom": "^28.1.0",
    "playwright": "^1.58.2",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.48.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  }
}
